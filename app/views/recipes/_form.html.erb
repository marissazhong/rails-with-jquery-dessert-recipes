<div class='box'>
<h1>New Recipe</h1>
<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:
      </h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :name, "Name:"%><br>
      <%= f.text_field :name, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= f.label :prep_time, "Prep Time (in minutes):" %><br>
      <%= f.text_field :prep_time, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :cook_time, "Cook Time (in minutes):" %><br>
      <%= f.text_field :cook_time, class: "form-control" %>
    </div><br>

    <table id="ingredients-table">
      <tr>
        <th>Name</th>
        <th>Amount</th>
      </tr>
      <%= f.fields_for :ingredients_recipes do |ingred| %>
        <tr>
          <td><%= ingred.text_field :input_name %></td>
          <td><%= ingred.text_field :quantity %></td>
        </tr>
      <% end %>
    </table>
    <tr><button type="button" id="add-ingredient">Add Ingredient</button></tr>

    <br></br>

    <table id="directions-table">
      <tr>
        <th>Direction</th>
      </tr>
      <tr>
        <%= f.fields_for :directions do |direct| %>
          <td>1. <%= direct.text_field "0" %></td>
        <% end %>
      </tr>
    </table>
    <tr><button type="button" id="add-direction">Add Direction</button></tr>

    <br></br>

    <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
    </div>
</div>
<div class="box">
    <div id="newRecipe">
      <div id="recipeName"></div>
      <h2 id="recipeAuthor"></h2>
      <h3 id="recipePrepTime"></h3>
      <h3 id="recipeCookTime"></h3>
      <div id="recipeIngredients"></div>
      <div id="recipeDirections"></div>
    </div>
</div>
    <script>
      $(document).ready(function(){
        let i = 1;
        let j = 1;
        $("#add-ingredient").click(function(){
          $("#ingredients-table").append('\
            <tr> \
              <td><input type="text" name="recipe[ingredients_recipes_attributes]['+i+'][input_name]"</td> \
              <td><input type="text" name="recipe[ingredients_recipes_attributes]['+i+'][quantity]"</td> \
            </tr><br> \
          ');
          i++;
        });
        $("#add-direction").click(function(){
          $("#directions-table").append('\
            <tr> \
              <td>'+(j+1)+'. <input type="textarea" name="recipe[directions]['+j+']"</td> \
            </tr> \
          ');
          j++;
        });
      });
    </script>
<% end %>

<script type="text/javascript" charset="utf-8">
$(function () {
    $('form').submit(function(event) {
        event.preventDefault();
        var values = $(this).serialize();
        var posting = $.post('/recipes', values);
        posting.done(function(data) {
          var recipe = data;
          $("#recipeName").html(`<p>Your new recipe has been created:</p><h2><a href="/recipes/${recipe["id"]}">${recipe["name"]}</a></h2>`);
          $("#recipeAuthor").text(`Author: ${recipe["user"]["username"]}`);
          $("#recipePrepTime").text(`Prep Time: ${recipe["prep_time"]}`);
          $("#recipeCookTime").text(`Cook Time: ${recipe["cook_time"]}`);
          var recipe_ingredients = '<h2>Ingredients:</h2><table id="ingredients-table"><tr><th>Name</th><th>Amount</th></tr>';
          var mid = recipe["ingredients_recipes"].length/2;
          recipe["ingredients_recipes"].slice(0,mid).forEach(function(ingredient) {
            ingredient_name = ingredient["input_name"].charAt(0).toUpperCase() + ingredient["input_name"].slice(1);
            recipe_ingredients += '<tr><td>' + ingredient_name + '</td><td>' + ingredient["quantity"] + '</td></tr>';
          });
          recipe_ingredients += '</table>';
          $("#recipeIngredients").html(recipe_ingredients);
          console.log(recipe);
          var recipe_directions = '<h2>Directions:</h2>';
          var i = 1;
          recipe["directions"].match(/".*?"/g).forEach(function(direction) {
            recipe_directions += i + '. ' + direction.slice(1,-1) + '<br />';
            i++;
          })
          $("#recipeDirections").html(recipe_directions);
        });
    });
});
</script>